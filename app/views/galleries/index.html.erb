<h1>Galleries</h1>

<div id="galleries">
  <div class="container">
    <div class="row">
      <% @galleries.each do |gallery| %>
        <%= render gallery %>
        <p>
          <%= link_to "Show this gallery", gallery %>
        </p>
      <% end %>
    </div>
  </div>
</div>

